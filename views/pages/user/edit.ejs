<ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="/user/view-list">Users</a></li>
	<li class="breadcrumb-item active">Edit</li>

</ol>

<h1 class="display-4">Edit User</h1>
<form method="post" action="/user/edit">
		<div class="form-group">
		<label for="id">#</label>
		<input readonly type="text" name="id" class="form-control" value=<%= user.id %>>
	</div>
	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" name="username" class="form-control" value=<%= user.username %>>
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input type="password" name="password" class="form-control" value=<%= user.password %>>
	</div>
	<div class="form-group">
		<label for="role">Role</label>
		<select name="role" class="form-control" value=<%= (user.role)? user.role.name : ''%>>
			<% roles.forEach(function(role){ %>
			<option value="<%= role.id %>"><%= role.name %></option>
			<% }); %>
		</select>
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<input type="text" name="email" class="form-control" value=<%= user.email %>>
	</div>

	<input type="submit" value="Submit", class="btn btn-primary">
</form> 